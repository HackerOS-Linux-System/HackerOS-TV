#:kivy 2.3.1
#:import dp kivy.metrics.dp

<MainScreen>:
    canvas.before:
        Color:
            rgba: 0.07, 0.07, 0.07, 1
        Rectangle:
            pos: self.pos
            size: self.size

<ServiceButton>:
    background_normal: ''
    background_color: 0.2, 0.2, 0.2, 1
    color: 1, 1, 1, 1
    font_size: dp(24)
    font_name: 'DejaVuSans'
    canvas.before:
        Color:
            rgba: 0.33, 0.33, 0.33, 1 if self.state == 'normal' else 0.22, 0.22, 0.22, 1
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [15]
        Color:
            rgba: 0.5, 0.5, 0.5, 1
        Line:
            rounded_rectangle: (self.x, self.y, self.width, self.height, 15)
            width: 2
    canvas:
        Color:
            rgba: 1, 1, 1, 0.3 if self.state == 'down' else 0
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [15]

<SettingsButton>:
    background_normal: ''
    background_color: 0.16, 0.16, 0.16, 1
    color: 1, 1, 1, 1
    font_size: dp(20)
    font_name: 'DejaVuSans'
    canvas.before:
        Color:
            rgba: 0.22, 0.22, 0.22, 1 if self.state == 'normal' else 0.15, 0.15, 0.15, 1
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [12]
        Color:
            rgba: 0.31, 0.31, 0.31, 1
        Line:
            rounded_rectangle: (self.x, self.y, self.width, self.height, 12)
            width: 2
    canvas:
        Color:
            rgba: 1, 1, 1, 0.25 if self.state == 'down' else 0
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [12]

<Button>:
    background_normal: ''
    background_color: 0.15, 0.15, 0.15, 1
    color: 1, 1, 1, 1
    font_size: dp(18)
    font_name: 'DejaVuSans'
    canvas.before:
        Color:
            rgba: 0.2, 0.2, 0.2, 1 if self.state == 'normal' else 0.13, 0.13, 0.13, 1
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [10]
        Color:
            rgba: 0.27, 0.27, 0.27, 1
        Line:
            rounded_rectangle: (self.x, self.y, self.width, self.height, 10)
            width: 1
    canvas:
        Color:
            rgba: 1, 1, 1, 0.2 if self.state == 'down' else 0
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [10]

<Label>:
    color: 1, 1, 1, 1
    font_size: dp(32)
    font_name: 'DejaVuSans'

<DropDown>:
    canvas.before:
        Color:
            rgba: 0.12, 0.12, 0.12, 1
        Rectangle:
            pos: self.pos
            size: self.size
        Color:
            rgba: 0.2, 0.2, 0.2, 1
        Line:
            rectangle: self.x, self.y, self.width, self.height
            width: 1
